<div class="page-header">

  <div class="pull-right">
    <%= link_to 'New Task', new_task_path, class: "btn btn-info btn-md" %>
  </div>
  <h1>Tasks</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="col-md-8"><%= task.description %></td>
        <td><%= link_to 'Show', task, class: "btn btn-success btn-md" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info btn-md"  %></td>
        <td><%= link_to 'Delete', task, class: "btn btn-danger btn-md", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
